<div id="task">
	<header>
		<h1><%= @project.name %></h1>
	</header>

	<header>
		<h2><%= @task.subject %></h2>

		<ul class="actions">
			<li><%= link_to "Edit Task", [:edit, @project, @task],
			class: "edit" %></li>
			<li><%= link_to "Delete Task", [@project, @task], method: :delete,
			data: {confirm: "Are you sure you want to delete this task?"},
			class: "delete" %></li>
		</ul>
	</header>

	<%= simple_format(@task.description) %>
</div>