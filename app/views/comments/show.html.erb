<div id="comment">
	<header>
		<h1><%= @project.name %></h1>
	</header>

	<header>
		<h2><%= @comment.subject %></h2>

		<ul class="actions">
			<li><%= link_to "Edit Comment", [:edit, @project, @comment],
			  class: "edit" %></li>
			<li><%= link_to "Delete Comment", [@project, @comment], method: :delete,
			data: {confirm: "Are you sure you want to delete this comment?"},
			class: "delete" %></li>
		</ul>
	</header>

	<%= simple_format(@comment.comment) %>
</div>
